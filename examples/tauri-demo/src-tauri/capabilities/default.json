{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"opener:default",
		"dialog:allow-open",
		"dialog:default",
		"shellx:allow-spawn",
		"shellx:allow-stdin-write",
		"shellx:allow-kill",
		"shellx:allow-fix-path-env",
		{
			"identifier": "shell:allow-spawn",
			"allow": [
				{
					"name": "run-bun",
					"cmd": "bun",
					"args": ["run", { "validator": ".+" }]
				}
			]
		},
		"shell:allow-spawn",
		"shell:allow-kill",
		"shell:allow-stdin-write"
	]
}
